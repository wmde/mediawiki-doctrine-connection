{
	"name": "mediawiki/doctrine-connection",
	"license": "BSD-3-Clause",
	"description": "Tiny library for creating a Doctrine DBAL Connection from a MediaWiki Database object",
	"require": {
		"php": "^7.0",
		"doctrine/dbal": "~2.5.13"
	},
	"require-dev": {
		"phpunit/phpunit": "^6.5.14",
		"ockcyp/covers-validator": "~1.1",
		"squizlabs/php_codesniffer": "~3.3",
		"slevomat/coding-standard": "^3.0|~4.5",
		"mediawiki/mediawiki-codesniffer": "~23.0"
	},
	"autoload": {
		"psr-4": {
			"MediaWiki\\DoctrineConnection\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"MediaWiki\\DoctrineConnection\\Tests\\": "tests/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "0.1.x-dev"
		}
	}
}
